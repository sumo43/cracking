#include <iostream>




using namespace std;

// number to add 1 to == 256 >> y, just subtract y after end of each "byte"

void printLine( char scr [], int width) {

    int size = sizeof(scr) / sizeof(char);
    cout << sizeof(scr) << endl;
    cout << sizeof(char) << endl;
    cout << size << endl;
    for(int i = 0; i < size; i++) {
        if(i % width == 0) {
            cout << endl;
        }
        cout << int(scr[i]); 
    }
    cout << endl;

}
